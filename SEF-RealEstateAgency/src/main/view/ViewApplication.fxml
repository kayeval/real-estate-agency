<AnchorPane prefHeight="423.0" prefWidth="344.0" stylesheets="@../res/login.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.ViewApplicationController">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0c2940f2" height="426.0" layoutX="-1.0" stroke="BLACK"
                   strokeType="INSIDE" strokeWidth="0.0" width="345.0"/>
        <Label fx:id="error" layoutX="41.0" layoutY="5.0" textFill="#ff4e2beb">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <Text fill="WHITE" layoutX="39.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Applicant/s">
            <font>
                <Font name="Courier" size="20.0"/>
            </font>
        </Text>
        <TextField fx:id="applicantField" layoutX="37.0" layoutY="63.0" opacity="0.8" prefHeight="37.0"
                   prefWidth="242.0" style="-fx-background-radius: 5; -fx-background-color: white;"
                   stylesheets="@../res/login.css">
            <font>
                <Font size="16.0"/>
            </font>
        </TextField>
        <Button fx:id="addApplicantBtn" layoutX="273.0" layoutY="62.0" mnemonicParsing="false" prefHeight="39.0"
                prefWidth="36.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5;"
                text="+">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Button>
        <Text fill="WHITE" layoutX="41.0" layoutY="134.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Weekly Rental">
            <font>
                <Font name="Courier" size="20.0"/>
            </font>
        </Text>
        <TextField fx:id="listedPriceField" focusTraversable="false" layoutX="42.0" layoutY="143.0" opacity="0.8"
