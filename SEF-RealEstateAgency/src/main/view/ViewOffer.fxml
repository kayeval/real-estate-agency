<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="354.0" prefWidth="344.0" stylesheets="@../res/login.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.ViewOfferController">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0c2940f2" height="365.0" layoutX="-1.0" stroke="BLACK"
                   strokeType="INSIDE" strokeWidth="0.0" width="345.0"/>
        <Label fx:id="error" layoutX="41.0" layoutY="5.0" textFill="#ff4e2beb">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <Text fill="WHITE" layoutX="39.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Applicant">
            <font>
                <Font name="Courier" size="20.0"/>
            </font>
        </Text>
        <TextField fx:id="applicantField" focusTraversable="false" layoutX="40.0" layoutY="63.0" opacity="0.8"
                   prefHeight="37.0" prefWidth="272.0" style="-fx-background-radius: 5; -fx-background-color: white;"
                   stylesheets="@../res/login.css">
            <font>
                <Font size="16.0"/>
            </font>
        </TextField>
        <Text fill="WHITE" layoutX="41.0" layoutY="134.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Minimum Price">
            <font>
                <Font name="Courier" size="20.0"/>
            </font>
        </Text>
        <TextField fx:id="listedPriceField" focusTraversable="false" layoutX="42.0" layoutY="143.0" opacity="0.8"
                   prefHeight="29.0" prefWidth="272.0" style="-fx-background-radius: 5; -fx-background-color: white;"
                   stylesheets="@../res/login.css">
            <font>
                <Font size="16.0"/>
            </font>
        </TextField>
        <Text fill="WHITE" layoutX="41.0" layoutY="214.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Proposed Price">
            <font>
                <Font name="Courier" size="20.0"/>
            </font>
        </Text>
        <TextField fx:id="proposedPriceField" layoutX="42.0" layoutY="223.0" opacity="0.8" prefHeight="29.0"
                   prefWidth="272.0" style="-fx-background-radius: 5; -fx-background-color: white;"
                   stylesheets="@../res/login.css">
            <font>
                <Font size="16.0"/>
            </font>
        </TextField>
        <Button fx:id="editOrSaveBtn" layoutX="115.0" layoutY="297.0" mnemonicParsing="false"
                onAction="#editOrSaveAction" prefHeight="39.0" prefWidth="116.0"
                style="-fx-background-color: white; -fx-background-radius: 5;" text="Edit">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="rejectBtn" layoutX="193.0" layoutY="297.0" mnemonicParsing="false" onAction="#rejectAction"
                prefHeight="39.0" prefWidth="116.0" style="-fx-background-color: white; -fx-background-radius: 5;"
                text="Reject">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Button>
        <Button fx:id="acceptBtn" layoutX="49.0" layoutY="297.0" mnemonicParsing="false" onAction="#acceptAction"
                prefHeight="39.0" prefWidth="116.0" style="-fx-background-color: white; -fx-background-radius: 5;"
                text="Accept">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
