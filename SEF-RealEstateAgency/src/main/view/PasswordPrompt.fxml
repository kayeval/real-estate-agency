<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="183.0" prefWidth="344.0" stylesheets="@../res/login.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.PasswordPromptController">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0c2940f2" height="188.0" layoutX="-1.0" stroke="BLACK"
                   strokeType="INSIDE" strokeWidth="0.0" width="345.0"/>
        <Label fx:id="error" layoutX="41.0" layoutY="5.0" textFill="#ff4e2beb">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <Text fill="WHITE" layoutX="39.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Enter password to confirm">
            <font>
                <Font name="Courier" size="20.0"/>
            </font>
        </Text>
        <PasswordField fx:id="passwordField" layoutX="38.0" layoutY="62.0" opacity="0.8" prefHeight="32.0"
                       prefWidth="272.0" style="-fx-background-color: white; -fx-background-radius: 5;">
            <font>
                <Font size="16.0"/>
            </font>
        </PasswordField>
        <Button fx:id="confirmBtn" layoutX="57.0" layoutY="116.0" mnemonicParsing="false" onAction="#confirmAction"
                prefHeight="39.0" prefWidth="232.0" style="-fx-background-color: white; -fx-background-radius: 5;"
                text="Confirm and save changes">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </children>
</AnchorPane>
